<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prepare.prepareurself">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_1_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Home.content.courses.ui.activity.ProjectsActivity"></activity>
        <activity
            android:name=".Home.content.profile.ui.EditPreferencesActivity"
            android:theme="@style/ProfileTheme"></activity>
        <activity android:name=".Home.content.courses.ui.activity.CoursesActivity"></activity>
        <activity android:name=".Home.content.resources.youtubevideoplayer.YoutubePlayerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="prepareurself.tk"
                    android:scheme="prepareurself_course" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home.content.resources.ui.activity.ResourcesActivity"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="prepareurself.tk"
                    android:scheme="prepareurself_resource" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Home.ui.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="prepareurself.tk"
                    android:scheme="prepareurself_home" />
            </intent-filter>
        </activity>
        <activity android:name=".utils.QuizBaseActivity" />
        <activity
            android:name=".quiz.QuizActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activites.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>