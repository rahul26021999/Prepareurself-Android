<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prepare.prepareurself">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_1_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".courses.ui.activity.AllCoursesActivity"></activity>
        <activity
            android:name=".profile.ui.EditPreferenceActivity"
            android:theme="@style/ProfileTheme" /> <!-- Default Notification Icon -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" /> <!-- Default notification color -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" /> <!-- Default notification channel (required for Android 8.0 and above) -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity android:name=".authentication.ui.VerifyEmailActivity" />
        <activity android:name=".profile.ui.activity.UpdatePasswordActivity" />
        <activity android:name=".youtubeplayer.youtubeplaylistapi.ui.VideoActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="app.prepareurself"
                    android:scheme="video" />
            </intent-filter>
        </activity>
        <activity android:name=".courses.ui.activity.ProjectsActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="app.prepareurself"
                    android:scheme="project" />
            </intent-filter>
        </activity>
        <activity android:name=".courses.ui.activity.CoursesActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="app.prepareurself"
                    android:scheme="course" />
            </intent-filter>
        </activity>
        <activity
            android:name=".resources.youtubevideoplayer.YoutubePlayerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".resources.ui.activity.ResourcesActivity"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="app.prepareurself"
                    android:scheme="theory" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Home.ui.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".utils.QuizBaseActivity" />
        <activity
            android:name=".quiz.QuizActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".authentication.ui.AuthenticationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="app.prepareurself"
                    android:scheme="install" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>