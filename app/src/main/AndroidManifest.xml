<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prepare.prepareurself">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.prepare.prepareurself.utils.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.prepare.prepareurself.Home.content.courses.ui.activity.CoursesActivity"></activity>
        <activity android:name="com.prepare.prepareurself.Home.content.resources.youtubevideoplayer.YoutubePlayerActivity" />
        <activity
            android:name="com.prepare.prepareurself.Home.content.resources.ui.activity.ResourcesActivity"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.prepare.prepareurself.Home.ui.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.prepare.prepareurself.utils.QuizBaseActivity" />
        <activity
            android:name="com.prepare.prepareurself.quiz.QuizActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.prepare.prepareurself.Activites.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>