<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/rootLayout"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="#909090"
        android:scaleType="centerCrop"
        android:id="@+id/image_playlist_item"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_playlist_item_title"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/image_playlist_item"
        android:fontFamily="@font/proximanovaregular"
        android:lineSpacingExtra="2dp"
        tools:text="How to make a tic-tac-to Game in Android - Part 1 The layout - Android Studio Tutorial And CHECKING FOR A WINNER"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>