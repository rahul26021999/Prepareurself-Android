<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizv2.ui.QuizActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#E9ECF8"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:id="@+id/top_bar_quiz">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_quiz_title"
            android:text="Android Quiz"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"/>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:id="@+id/submit_quiz"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF6F66"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <com.prepare.prepareurself.utils.NonSwipableViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/quiz_view_pager"
        android:layout_above="@+id/bottom_bar_quiz"
        android:layout_below="@+id/top_bar_quiz"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="#E9ECF8"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:id="@+id/bottom_bar_quiz">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_q_no"
            android:text="Q1"
            android:textSize="16sp"
            android:textColor="#2E3458"
            android:layout_centerVertical="true"/>

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2E3458"
            android:id="@+id/chronometer_quiz"
            android:layout_toRightOf="@+id/tv_q_no"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            app:cornerRadius="@dimen/padding_10"
            android:text="Next"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:background="#4A61DD"
            android:textSize="14sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:visibility="visible"
            android:id="@+id/card_next_q"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4A61DD"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEXT"
                    android:id="@+id/tv_next_btn"
                    android:textColor="#fff"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>