<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <com.google.android.youtube.player.YouTubeThumbnailView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_video_resources_adapter"
            android:background="@drawable/placeholder"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/img_video_resources_adapter">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a Title kjbjc lknk lkk lmj k klj l lkj'kdv pjop pmkmv pokopk km "
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:singleLine="false"
                android:textColor="#000"
                android:id="@+id/tv_video_resources_title"
                android:fontFamily="@font/poppins_medium" />

        </RelativeLayout>



        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/img_video_resources_adapter"
            app:layout_constraintTop_toTopOf="parent"
            android:text="This is a Title"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:singleLine="false"
            android:visibility="gone"
            android:id="@+id/tv_video_resources_decription"
            android:fontFamily="@font/poppins_medium"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>