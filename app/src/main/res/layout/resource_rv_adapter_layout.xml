<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/card_resource_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:id="@+id/image"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_height="130dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:scaleType="fitStart"
                    android:id="@+id/topic_image"
                    android:src="@drawable/placeholder" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image"
                android:text="This is the title of the topicsknkljdnfkjdn"
                android:textSize="14sp"
                android:singleLine="false"
                android:minLines="1"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/tv_title_topic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image"
                android:layout_below="@+id/tv_title_topic"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="This is the title of the topics"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/tv_decription_topic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image"
                android:layout_below="@+id/tv_decription_topic"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:text="10 views"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/no_of_views"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/no_of_views"
                android:layout_below="@+id/tv_decription_topic"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:text="10 likes"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/tv_no_of_resources"/>

            <com.like.LikeButton
                app:icon_type="thumb"
                app:icon_size="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/hitLike"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>