                app:layout_constraintStart_toEndOf="@id/topic_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:text="This is the title of the topicsknkljdnfkjdn"
                android:textSize="16sp"
                android:singleLine="false"
                android:minLines="1"
                android:textColor="#000"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/tv_title_topic"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/topic_image"
                app:layout_constraintTop_toBottomOf="@id/tv_title_topic"
                android:layout_marginTop="10dp"
                android:text="This is the title of the topics"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_medium"
