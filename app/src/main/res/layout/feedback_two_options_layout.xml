<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feedback.ui.FeedbackFragment"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:id="@+id/feedback_two_options_lin"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:lineSpacingExtra="7dp"
            tools:text="Do you like our app servces n the prepareurself?"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:id="@+id/tv_feedback_question_2"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/feedbacklayoutbg"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:id="@+id/l1">
            <androidx.cardview.widget.CardView
                android:id="@+id/cd1_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imagetick1_2"
                        android:visibility="gone"
                        android:background="@drawable/check_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES"
                        android:textSize="16sp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_regular"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cd2_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:id="@+id/imagetick2_2"
                        android:background="@drawable/check_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"

                        />
                    <TextView
                        android:id="@+id/tv_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"
                        android:textSize="16sp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_regular"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>