<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feedback.ui.FeedbackFragment"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:id="@+id/feedback_four_options_lin"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:lineSpacingExtra="7dp"
            tools:text="Do you like our app servces n the prepareurself?"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:id="@+id/tv_feedback_question"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@drawable/feedbacklayoutbg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/l1">
            <androidx.cardview.widget.CardView
                android:id="@+id/cd1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/imagetick1"
                        android:background="@drawable/check_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageview1"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:id="@+id/tv_verygood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageview1"
                        android:text="very good"
                        android:textSize="16sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/roboto_regular"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cd2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/imagetick2"
                        android:visibility="gone"
                        android:background="@drawable/check_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageview2"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:id="@+id/tv_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageview2"
                        android:text="good"
                        android:textSize="16sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/roboto_regular"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/l2"
            android:layout_below="@+id/l1">
            <androidx.cardview.widget.CardView
                android:id="@+id/cd3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/imagetick3"
                        android:background="@drawable/check_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageview3"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/tv_fair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageview3"
                        android:text="fair"
                        android:textSize="16sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/roboto_regular"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cd4"
                android:layout_width="100dp"
                android:layout_margin="10dp"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/imagetick4"
                        android:visibility="gone"
                        android:background="@drawable/check_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageview4"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/tv_bad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageview4"
                        android:text="bad"
                        android:textSize="16sp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/roboto_regular"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>