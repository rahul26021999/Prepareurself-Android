<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".aboutus.ui.AboutusFragment">

        <ImageView
            android:id = "@+id/imagevw"
            android:layout_width = "match_parent"
            android:layout_height = "250dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head1"
            android:layout_margin="10dp"
            android:layout_below="@+id/imagevw"
            android:background="@drawable/updatepasswordbg"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/indigo_daisy"
            android:textAlignment="center"
            android:textSize="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textbox1"
            android:layout_margin="10dp"
            android:layout_below="@+id/head1"
            android:text="@string/aboutustext1"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="center"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subhead1"
            android:layout_margin="30dp"
            android:layout_below="@+id/textbox1"
            android:text="@string/aboutustext2"
            android:textStyle="italic"
            android:fontFamily="@font/poppins_semibold"
            android:textAlignment="center"
            android:textSize="17dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subhead2"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:layout_below="@+id/subhead1"
            android:text="Our Vision"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textAlignment="center"
            android:background="@drawable/updatepasswordbg"
            android:textSize="20dp"
            />

    </RelativeLayout>

</ScrollView>