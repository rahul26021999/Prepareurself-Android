<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".profile.ui.fragments.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"/>

    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_topbar"
        android:id="@+id/topbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@+id/topbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp">

                <!--Top Profile Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circularbordersolid"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/person_placeholder"
                        app:cardCornerRadius="6dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        android:id="@+id/user_image">

                    </de.hdodenhof.circleimageview.CircleImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/proximanovaregular"
                        android:textColor="#424242"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        tools:text="Rahul26021999@gmail.com"
                        android:textStyle="bold"
                        android:id="@+id/tv_email_profile"/>
                </LinearLayout>



            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="0dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="18dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/card_resource_heading">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User info"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:fontFamily="@font/proximanovaregular"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:id="@+id/tv_resouce_heading_video"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lightGrey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preferences"
                        android:padding="10dp"
                        android:background="?attr/selectableItemBackground"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:fontFamily="@font/proximanovaregular"
                        android:textColor="@color/lightGrey"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:id="@+id/tv_resouce_heading_theory"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_resources"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>

        </androidx.core.widget.NestedScrollView>
</RelativeLayout>