<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/tv_dialog_msg"
        android:text="Unable to connect to Internet. Please check your internet connection."
        android:textColor="@color/colorPrimaryDark"
        app:fontFamily="@font/proximanovaregular" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_msg"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="Login Again"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:id="@+id/tv_login_again"
        android:fontFamily="@font/proximanovaregular"/>



</RelativeLayout>