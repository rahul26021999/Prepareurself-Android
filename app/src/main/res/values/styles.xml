<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearanceButton">@style/RobotoTextViewStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavBarTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/proximanovaregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/quiz_background</item>
    </style>

    <!--theme for edt_profile_actvty-->
    <style name="ProfileTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="courseDetailsTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/spashbackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>



    <style name="EditPrefrenceChip">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/DarkModePrimarySelectedBlack</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemThemeWhite">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="EditTextViewStyleLoginRegister">
        <item name="android:paddingBottom">17dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">@drawable/et_custom</item>
    </style>

    <!--radiobutton-->


    <!--coursedetail button theme-->

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>
